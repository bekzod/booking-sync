{{#modal-dialog
  blockBodyScroll=true
  clickOutsideToClose=true
  translucentOverlay=true
  targetAttachment='none'
  close='close'
  container-class='modal-dialog'
  overlay-class="modal-backdrop"
  wrapper-class='modal in'}}
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" onclick={{action 'close'}} class="close"><span>Ã—</span></button>
        <h4 class="">Booking {{rental.name}}</h4>
      </div>
      <div class="modal-body text-center">
        <h4>Daily Rate ${{rental.dailyRate}}</h4>
        <h4>Price ${{booking.price}} for {{days}} days</h4>
        {{#power-calendar-range
          center=center
          selected=range
          minRange=1
          onCenterChange=(action (mut center) value="date")
          onSelect=(action 'setRange' value="date") as |calendar|}}
            {{calendar.nav}}
            {{calendar.days minDate=minDate disabledDates=disabledDates}}
        {{/power-calendar-range}}
      </div>
      <div class="modal-footer">
        <button class="btn btn-default"><i class="fa fa-repeat"></i> Book</button>
      </div>
    </div>
{{/modal-dialog}}